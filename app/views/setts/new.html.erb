<h1>New Set</h1>

<%= form_with(model: @sett, local: true) do |form| %>
  <div>
    <%= form.label :reps %>
    <%= form.number_field :reps %>
  </div>

  <div>
    <%= form.label :weight %>
    <%= form.number_field :weight %>
  </div>

  <div>
    <%= form.label :target_hit %>
    <%= form.check_box :target_hit %>
  </div>

  <div>
    <%= form.hidden_field :exercise_id, value: @exercise.id %>
    <%= form.hidden_field :workout_id, value: @workout.id %>
    <p>Current Exercise: <%= @exercise.name %></p>
    <p>Chosen Workout Plan: <%= @workout.name %></p>
  </div>

  <div>
    <%= form.submit "Save Set" %>
  </div>
<% end %> 